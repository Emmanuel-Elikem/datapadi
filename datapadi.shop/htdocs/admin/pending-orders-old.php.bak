    <script>
        function markProcessed(orderId) {
            if (!confirm('Have you completed this order on the provider website?')) {
                return;
            }
            
            fetch('/api/admin/mark-completed.php', {
                method: 'POST',
                headers: {'Content-Type': 'application/json'},
                body: JSON.stringify({order_id: orderId})
            })
            .then(response => response.json())
            .then(result => {
                if (result.success) {
                    alert('‚úÖ Order marked as completed!');
                    location.reload();
                } else {
                    alert('Error: ' + result.message);
                }
            })
            .catch(error => {
                alert('Error: ' + error.message);
            });
        }
        
        function viewDetails(orderId) {
            window.open('/check-order.php?id=' + orderId, '_blank');
        }
        
        // Auto-refresh every 30 seconds
        setTimeout(() => location.reload(), 30000);
    </script>
